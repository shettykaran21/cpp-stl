{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build C++",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "\"${relativeFile}\"",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
